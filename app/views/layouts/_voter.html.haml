.voter
  %p= "#{obj.upvotes} / #{obj.downvotes}"
  %span.voter__total="#{obj.upvotes - obj.downvotes}"

  %div.voter__button-wrapper
    -if signed_in?
      -v = current_user.voted_for(obj, current_user)
      -if v.nil?
        = link_to "UPVOTE", popmeter_path(obj.popmeter, is_upvote: true), class: "voter__vote voter__vote--up", remote: true, method: :patch
        = link_to "RESET", popmeter_path(obj.popmeter), class: "voter__vote voter__vote--reset", remote: true, method: :delete
        = link_to "DOWNVOTE", popmeter_path(obj.popmeter, is_upvote: false), class: "voter__vote voter__vote--down", remote: true, method: :patch
      -else
        -if v.is_upvote
          = link_to "UPVOTE", popmeter_path(obj.popmeter, is_upvote: true), class: "voter__vote voter__vote--up is-current", remote: true, method: :patch
          = link_to "RESET", popmeter_path(obj.popmeter), class: "voter__vote voter__vote--reset", remote: true, method: :delete
          = link_to "DOWNVOTE", popmeter_path(obj.popmeter, is_upvote: false), class: "voter__vote voter__vote--down", remote: true, method: :patch
        -else
          = link_to "UPVOTE", popmeter_path(obj.popmeter, is_upvote: true), class: "voter__vote voter__vote--up", remote: true, method: :patch
          = link_to "RESET", popmeter_path(obj.popmeter), class: "voter__vote voter__vote--reset", remote: true, method: :delete
          = link_to "DOWNVOTE", popmeter_path(obj.popmeter, is_upvote: false), class: "voter__vote voter__vote--down is-current", remote: true, method: :patch
    -else
      sign in to vote
