.mainNav
  .row
    .small-12.medium-2.large-2.columns
      %nav.mainSiteNav
        .siteBrand        
          %h2.siteBrand-siteName
            =link_to "Bronko", root_path, class: 'siteBrand-siteLink'

    .small-12.medium-6.large-7.columns.y-center
      %ul.siteLinks.siteLinks--topMargin.inline-list.fs-larger
        %li.siteLinks-item
          =link_to "Frontpage", root_path, class: 'siteLinks-link'
        -if signed_in?
          %li.siteLinks-item
            =link_to "My frontpage", my_frontpage_path, class: 'siteLinks-link'
          %li.siteLinks-item
            =link_to "All subs", subs_path, class: 'siteLinks-link'

    .small-12.medium-4.large-3.columns
      // COMP: user details display
      =render "users/userDetails"
