.metaInfo
  .metaInfo-item
    =link_to sub, class: "metaInfo-link" do
      %span.metaInfo-icon=fa_icon "comment-o"
      %span.metaInfo-text=sub.posts.length

  .metaInfo-item
    -if sub.user
      =link_to sub.user, class: "metaInfo-link" do
        %span.metaInfo-icon=fa_icon "user"
        %span.metaInfo-text=sub.user.username
    -else
      %span.user_deleted User deleted

  .metaInfo-item
    %span.metaInfo-icon=fa_icon "clock-o"
    %span.metaInfo-text="#{time_ago_in_words(sub.created_at)} ago"